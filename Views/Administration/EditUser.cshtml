@model EditUserViewModel
@{ ViewBag.Title = "Edit User";}
<h1>Edit User</h1>

<form class="mt-3 col-10" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-floating mt-1 ">
        <input disabled asp-for="Id" class="form-control" />
        <label asp-for="Id"></label>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="row form-floating mt-1">
        <input asp-for="Email" class="form-control" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="row form-floating mt-1">
        <input asp-for="Username" class="form-control" />
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="row form-floating mt-1">
        <input asp-for="City" class="form-control" />
        <label asp-for="City"></label>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="ListUsers" asp-controller="administration" class="btn btn-info">Cancel</a>
    </div>
</form>

@* Todo: show user roles in card *@
<div class="card mt-2">
    <div class="card-header"><h3>User Roles</h3></div>
    <div class="card-body">
        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Roles)
            {
                <h4>@role</h4>
            }
        }
        else
        {
            <h4>None At the moment</h4>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="EditUserRoles" asp-controller="Administration" asp-route-id ="@Model.Id" >Manage Roles</a>
    </div>
</div>
