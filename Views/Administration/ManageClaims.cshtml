@model ManageClaimsViewModel


<form method="post">
    <div class="card mt-2">
        <div class="card-header">
            <h1>Add or Remove Claims</h1>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.UserId" />
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check">
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">@Model.Claims[i].ClaimType</label>
                </div>
                <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="edituser" asp-controller="administration" asp-route-id="@Model.UserId" class="btn btn-info">Cancel</a>
        </div>
    </div>
</form>
